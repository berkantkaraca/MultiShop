@model UpdateProductDto

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="ProductId" />

                        <label>Ürün Adı</label>
                        <input type="text" asp-for="ProductName" class="form-control" />
                        <br />

                        <label>Fiyat</label>
                        <input type="text" asp-for="ProductPrice" class="form-control" />
                        <br />

                        <label>Görsel</label>
                        <input type="text" asp-for="ProductImageUrl" class="form-control" />
                        <br />

                        <label>Kategori</label>
                        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.Categories, new { @class = "form-control" })
                        <br />

                        <label>Açıklama</label>
                        <textarea asp-for="ProductDescription" rows="5" class="form-control"></textarea>
                        <br />

                        <button type="submit" class="btn btn-primary">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>